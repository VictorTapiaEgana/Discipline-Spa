<form action="/eliminardeporte" method="post"  class="p-4 bg-secondary-subtle rounded-3">

    <div class="mb-3">
        <label for="deportes1" class="form-label">Nombre del Deporte a Eliminar</label>
        <select name="deportes1" class="form-select">

        <option selected disabled>Deporte a Eliminar</option>

          {{#each deportes}}
               <option  name={{this.deporte}} value={{this.precio}} >{{this.deporte}}</option>    
          {{/each}}        
        
        </select>
  </div>

  <div class="mb-3">    
    <input type="hidden" class="form-control" id="nombredeporte" name="nombredeporte">    
  </div>
  
  <div class="mb-3">
    <label for="preciodeporte" class="form-label">Precio</label>
    <input type="text" class="form-control" id="preciodeporte" name="preciodeporte" disabled>
  </div>
  
  <button type="submit" class="btn btn-danger">Eliminar</button>

</form>